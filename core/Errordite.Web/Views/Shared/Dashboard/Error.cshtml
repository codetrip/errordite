@using CodeTrip.Core.Extensions
@using Errordite.Core.Extensions
@using Errordite.Web.Extensions
@model Errordite.Web.Models.Errors.ErrorInstanceViewModel

<div class="boxed-item error">
	<div class="item-bar">&nbsp;</div>	
	<div class="item-content">
		<div class="item-info heading full">
			Exception Type
		</div>
		<div class="item-info full" style="margin-bottom:5px;">
			<a href="@Url.Error(Model.Error.FriendlyId)">@Model.Error.ExceptionInfo.Type</a>
		</div>
		<div class="item-info heading">
			Application
		</div>
        <div class="item-info heading divider">
			Received On
		</div>
        <div class="item-info heading divider short">
			Issue
		</div>
		<div class="item-info">
			@Model.ApplicationName
		</div>
		<div class="item-info divider">
		    @Model.Error.TimestampUtc.ToLocalTimeFormatted()
		</div>
		<div class="item-info divider short">
			<a href="@Url.Issue(Model.Error.IssueId)">#@Model.Error.IssueId.GetFriendlyId()</a>
		</div>
	</div>
</div>
        