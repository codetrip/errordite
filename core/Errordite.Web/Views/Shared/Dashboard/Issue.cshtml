@using Errordite.Web.Extensions
@model Errordite.Web.Models.Issues.IssueItemViewModel

<div class="boxed-item issue" style="display:none">
	<div class="item-bar">&nbsp;</div>	
    <div class="item-content">
        <div class="item-info heading full">
            Name
        </div>
        <div class="item-info full" style="margin-bottom:5px;">
            <a href="@Url.Issue(Model.IssueId)" data-title="@Model.Name" @(Model.Name.Length > 65 ? "class=tool-tip" : "")>@(Model.Name.Length > 65 ? Model.Name.Substring(0, 65) + "..." : Model.Name)</a>
        </div>
        <div class="item-info heading">
            Status
        </div>
        <div class="item-info heading divider">
            Assigned To
        </div>
        <div class="item-info heading divider short">
            Errors
        </div>
        <div class="item-info">
            @Model.Status
        </div>
        <div class="item-info divider">
            @Model.UserName
        </div>
        <div class="item-info divider short">
            @Model.ErrorCount
        </div>
    </div>
</div>
        