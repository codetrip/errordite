@using Errordite.Core.Domain.Organisation
@using Errordite.Web.Extensions
@model Errordite.Web.Models.Users.UsersViewModel
           
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>  
            <th>Groups</th>      
            <th>Status</th> 
            @if(Model.EnableImpersonation)
            {
                <th>Impersonate</th>      
            }   
            else
            {
                <th>Edit</th>
                <th>Delete</th>
            }
        </tr>  
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>  
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>@user.Groups</td>
				<td>
					@user.Status
					@if(user.Status == UserStatus.Inactive)
					{
						using (Html.BeginForm("resendinvite", "users", new { userId = user.Id }, FormMethod.Post, new {style="display:inline"}))
                        {
							<span>(</span><a class="invite" href="#" title="Resend a new user invite to this user">resend invite</a><span>)</span>
                        }
					}
				</td>
                    
                @if (Model.EnableImpersonation)
                {
                    <td>
                        <a href="@Url.Impersonate(user.Id, Model.OrganisationId)">Impersonate</a>
                    </td>  
                }
                else
                {
                    <td>
                        <a href="@Url.EditUser(user.Id)">Edit</a>
                    </td>             
                    <td>
                        @using (Html.BeginForm("delete", "users", new { userId = user.Id }, FormMethod.Post))
                        {
                            <a class="delete" href="#">Delete</a>
                        }
                    </td>  
                }        
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td @(Model.EnableImpersonation ? "colspan=6" : "colspan=7") >
                @Html.Partial("Pagination", Model.Paging)
            </td>
        </tr>
    </tfoot>
</table>