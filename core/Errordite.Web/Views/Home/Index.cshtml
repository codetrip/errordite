@using Errordite.Web.Extensions

@{
    ViewBag.Title = "Home";
}


<div class="span12">
    <div class="hero-unit">
        <h1 class="heading">Welcome to Errordite</h1>
        <p style="text-align: center;">Helping you make sense of your .net exception logs</p>
        <p>
            <span class="hero-small">
                Errordite <span class="string-dark">receives all your application exceptions</span> and <span class="strong-dark">groups together</span> those
                that are the same - automatically or with rules <span class="string-dark">you define</span>.
                You then decide how to <span class="strong-dark">progress the errors</span>. 
                You can fix them, ignore them, or wait and see how often the error occurs.
            </span>
        </p>
        <p>
            <span class="hero-small">
                Errordite is currently running a <span class="strong-dark">free beta</span>. Please jump in and start making sense of your .net errors.
            </span>
        </p>
        <p class="buttons">
            <a class="btn-large btn-primary" href="@Url.SignIn()">Sign in</a>
            <a class="btn-large btn-primary" href="@Url.SignUp()">Sign up</a>
            <a class="btn-large btn-primary" href="@Url.WhatIsErrordite()">Find out more</a>
            <a class="btn-large btn-primary" href="@Url.Contact()">Contact us</a>
        </p>
    </div>
</div>  