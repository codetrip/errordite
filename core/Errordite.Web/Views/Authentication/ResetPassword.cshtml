@model Errordite.Web.Models.Authentication.ResetPasswordViewModel

@{
    ViewBag.Title = "Reset Password";
}

<div class="span12">
    <div class="base centered-narrow">
        <h2>Password Reset</h2>
        <div class="base-content">
            <p>Enter your email address below and we will send you an email so you can reset your password.</p>
            @using (Html.BeginForm("resetpassword", "authentication", FormMethod.Post, new {id = "passwordForm"})) {
                <ul class="errorditeform">
                    <li>
                        @Html.LabelFor(m => m.Email, "Email")
                        @Html.TextBoxFor(m => m.Email)
                        @Html.ValidationMessageFor(m => m.Email)
                    </li>
                    <li>
                        <input class="btn btn-success" type="submit" value="Reset Password" />
                    </li>
                </ul>
            }
        </div>
    </div>
</div>