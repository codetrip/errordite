<log4net debug="false">
    <appender name="TraceAppender" type="log4net.Appender.TraceAppender">
        <threshold value="DEBUG" />
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%d - %m%n" />
        </layout>
    </appender>

    <appender name="EventLogAppender" type="log4net.Appender.EventLogAppender, log4net" logName="Application">
        <threshold value="ERROR" />
        <param name="LogName" value="Application" />
        <param name="ApplicationName" value="Errordite" />
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%appdomain [%thread] %-5level - %message%newline [%properties]%newline %exception"/>
        </layout>
    </appender>

    <logger name="Errordite.Web">
        <level value="DEBUG"/>
        <appender-ref ref="TraceAppender"/>
    </logger>

    <logger name="Errordite.Reception.Web">
        <level value="DEBUG"/>
        <appender-ref ref="TraceAppender"/>
        <appender-ref ref="EventLogAppender"/>
    </logger>

    <logger name="Errordite.Reception">
        <level value="DEBUG"/>
        <appender-ref ref="TraceAppender"/>
        <appender-ref ref="EventLogAppender"/>
    </logger>

    <logger name="Errordite.Events">
        <level value="DEBUG"/>
        <appender-ref ref="TraceAppender"/>
        <appender-ref ref="EventLogAppender"/>
    </logger>

    <logger name="Errordite.ScheduledTasks">
        <level value="DEBUG"/>
        <appender-ref ref="TraceAppender"/>
        <appender-ref ref="EventLogAppender"/>
    </logger>

    <logger name="Errordite.Notifications">
        <level value="DEBUG"/>
        <appender-ref ref="TraceAppender"/>
        <appender-ref ref="EventLogAppender"/>
    </logger>

    <logger name="Errordite.Automation">
        <level value="DEBUG"/>
        <appender-ref ref="TraceAppender"/>
    </logger>

    <logger name="Errordite.Tests">
        <level value="DEBUG"/>
        <appender-ref ref="TraceAppender"/>
    </logger>
</log4net>