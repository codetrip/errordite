<?xml version="1.0"?>
<configuration>
  <components>
    <component id="ErrorditeConfiguration"
           lifestyle="singleton"
           service="Errordite.Core.Configuration.ErrorditeConfiguration, Errordite.Core"
           type="Errordite.Core.Configuration.ErrorditeConfiguration, Errordite.Core">
      <parameters>
        <SiteBaseUrl>http://dev-site.errordite.com/</SiteBaseUrl>
        <ReceptionEndpoint>http://dev-reception.errordite.com/</ReceptionEndpoint>
        <RenderMinifiedContent>false</RenderMinifiedContent>
        <ServiceBusEnabled>true</ServiceBusEnabled>
        <ReceptionQueueName>Errordite.Reception.Service</ReceptionQueueName>
        <NotificationsQueueName>Errordite.Notifications.Service</NotificationsQueueName>
        <EventsQueueName>Errordite.Events.Service</EventsQueueName>
        <AdministratorsEmail>errordite@codetrip.co.uk</AdministratorsEmail>
        <MaxPageSize>250</MaxPageSize>
        <IssueCacheTimeoutMinutes>120</IssueCacheTimeoutMinutes>
        <IssueErrorLimit>50</IssueErrorLimit>
        <IssueCacheId>2</IssueCacheId>
        <ErrorPropertiesForFiltering>
          <list>
            <item>Message</item>
            <item>MethodName</item>
            <item>Module</item>
            <item>StackTrace</item>
            <item>Type</item>
            <item>Url</item>
            <item>MachineName</item>
            <item>UserAgent</item>
          </list>
        </ErrorPropertiesForFiltering>
        <ReceptionHttpEndpoint>http://localhost:800</ReceptionHttpEndpoint>
      </parameters>
    </component>
  </components>
</configuration>
